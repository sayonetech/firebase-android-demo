<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d2d1d1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.sayone.firebaseexampleproject.Activity.UserNameActivity">

    <EditText
        android:id="@+id/user_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background"
        android:gravity="center"
        android:hint="@string/String_enter_user_name" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#6b6a6a"
        android:text="@string/String_submit"
        android:textColor="@android:color/white" />

</LinearLayout>
